<%- include('./partials/header')-%>
<body>
    
    <div class="container">
        <h2>Wheather App</h2>
        <form action="/" method="post">
            <input type="text" placeholder="Enter city/country name" name="city" required>
            <button class="btn" type="submit">Search</button>    
        </form>
    </div>

    <div class="weather">
        <% if(weather!==null){%>
        <h4 style="color : rgb(11, 49, 84)">Temperature: <span><%= weather.temp%></span><span>&#176;</span>C</h4>
        <h4 style="color : rgb(11, 49, 84)">Preasure: <span><%= weather.pressure%></span> hPa</h4>
        <h4 style="color : rgb(11, 49, 84)">Humidity: <span><%= weather.humidity%></span>%</h4>
        <h4 style="color : rgb(11, 49, 84)">Visibility: <span><%= weather.visibility%></span>m</h4>
        <h4 style="color : rgb(11, 49, 84)">Wind Speed: <span><%= weather.wind_speed%>m/s</span></h4>
        <% }%>
        <% if(error !== null){%>
            <span><%= error %></span>
        <% } %>
    </div>
</body>
</html>