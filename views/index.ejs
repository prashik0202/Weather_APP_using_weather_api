<%- include('./partials/header')-%>
<body>
    <div class="weather">
        <% if(weather !== null){%>
        <span><%= weather %></span>
        <% }%>
        <% if(error !== null){%>
            <span><%= error %></span>
        <% } %>
    </div>
    <div class="container">
        <h2>Wheather App</h2>
        <form action="/" method="post">
            <input type="text" placeholder="Enter city/country name" name="city" required>
            <button class="btn" type="submit">Search</button>    
        </form>
    </div>
</body>
</html>